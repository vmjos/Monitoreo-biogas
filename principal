#include <Adafruit_BMP085.h>
#include <Adafruit_SSD1306.h>
#include <splash.h>
#include <Adafruit_GFX.h>
#include <Wire.h>
#include <OneWire.h> 
#include <DallasTemperature.h>
#include <SFE_BMP180.h> //libreria del sensor
#include <Wire.h>
#define ANCHO 128
#define ALTO 64
#define OLED_RESET 14
Adafruit_SSD1306 oled(ANCHO, ALTO, &Wire, OLED_RESET);
#define ONE_WIRE_BUS 32
#define ONE_SUMERGIBLE 33
OneWire oneWire(ONE_WIRE_BUS);
DallasTemperature sensores(&oneWire);
OneWire oneWireSumergible(ONE_SUMERGIBLE);
DallasTemperature sensoragua(&oneWireSumergible);
int CH4;
char status;         
double temperatura,presion;   
SFE_BMP180 sensorPresion;

void setup(void){
  Serial.begin(9600);
  sensores.begin();
  sensoragua.begin();
  sensorPresion.begin();
  Wire.begin();
  oled.begin(SSD1306_SWITCHCAPVCC, 0X3c);
}

void loop(void)
{
  sensores.requestTemperatures();
  sensoragua.requestTemperatures();
  CH4 = analogRead(35);
  sensorPresion.getTemperature(temperatura);                               
  sensorPresion.getPressure(presion,temperatura);   
     delay(3000);

   oled.clearDisplay();
   oled.setTextColor(WHITE);
   oled.setCursor(0,0);
   oled.setTextSize(2);
   oled.print("Temperatura l√≠quido");
   oled.print(sensoragua.getTempCByIndex(0));
    oled.print("grados Celcius");

   oled.setCursor(5,17);
   oled.setTextSize(1);
   oled.print("Temperatura GASES");
   oled.print(sensores.getTempCByIndex(0));
   oled.print("grados Celcius");

   oled.setCursor(5,35);
   oled.setTextSize(1);
   oled.print("Presion");
   oled.print(presion*0.1,2); 
   oled.print("mba");

   oled.setCursor(5,43);
   oled.setTextSize(1);
   oled.print("ppm de CH4");
   oled.print(CH4); 

   delay(10000);
}
